{% extends 'admin.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="h3 mb-4 text-gray-800">Utilisateurs</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Liste des Utilisateurs</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="usersTable">
                        <thead class="thead-light">
                        <tr>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Rôle</th>
                            <th>Nationalité</th>
                            <th>Genre</th>
                            <th>Email</th>
                            <th>Permission</th>
                            <th>Statut</th>
                            <th>Vérifié</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for utilisateur in utilisateurs %}
                            <tr>
                                <td>{{ utilisateur.nom }}</td>
                                <td>{{ utilisateur.prenom }}</td>
                                <td>{{ utilisateur.role ? utilisateur.role|join(', ') : 'N/A' }}</td>
                                <td>{{ utilisateur.nationalite }}</td>
                                <td>{{ utilisateur.genre }}</td>
                                <td>{{ utilisateur.email }}</td>
                                <td>{{ utilisateur.permission ? 'Oui' : 'Non' }}</td>
                                <td>
                                    {% if utilisateur.statut %}
                                        <span class="badge badge-success">Actif</span>
                                    {% else %}
                                        <span class="badge badge-danger">Inactif</span>
                                    {% endif %}
                                </td>
                                <td>{{ utilisateur.isVerified ? 'Oui' : 'Non' }}</td>
                                <td>
                                    <a href="{{ path('app_utilisateur_show', {'id': utilisateur.id}) }}" class="btn btn-sm btn-info">Voir</a>
                                    <a href="{{ path('app_utilisateur_edit', {'id': utilisateur.id}) }}" class="btn btn-sm btn-primary">Modifier</a>
                                    {% if utilisateur.statut %}
                                        <form method="post" style="display: inline;" action="{{ path('app_utilisateur_index') }}" onsubmit="return confirm('Désactiver cet utilisateur ?');">
                                            <input type="hidden" name="id" value="{{ utilisateur.id }}">
                                            <input type="hidden" name="toggle_status" value="1">
                                            <input type="hidden" name="status" value="0">
                                            <button type="submit" class="btn btn-sm btn-danger">Désactiver</button>
                                        </form>
                                    {% else %}
                                        <form method="post" style="display: inline;" action="{{ path('app_utilisateur_index') }}" onsubmit="return confirm('Activer cet utilisateur ?');">
                                            <input type="hidden" name="id" value="{{ utilisateur.id }}">
                                            <input type="hidden" name="toggle_status" value="1">
                                            <input type="hidden" name="status" value="1">
                                            <button type="submit" class="btn btn-sm btn-success">Activer</button>
                                        </form>
                                    {% endif %}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="10" class="text-center">Aucun utilisateur trouvé</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <a href="{{ path('app_utilisateur_new') }}" class="btn btn-primary btn-user mt-3">Créer un nouvel utilisateur</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
    {{ parent() }}
    <script src="{{ asset('assets/back/vendor/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('assets/back/vendor/datatables/dataTables.bootstrap4.min.js') }}"></script>
    <script>
        $(document).ready(function() {
            $('#usersTable').DataTable({
                "order": [[0, "asc"]],
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/French.json"
                }
            });
        });
    </script>
{% endblock %}