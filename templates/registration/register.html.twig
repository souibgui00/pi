<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Inscription - WoOx Travel</title>

    <!-- Custom fonts -->
    <link href="{{ asset('assets/back/vendor/fontawesome-free/css/all.min.css') }}" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles -->
    <link href="{{ asset('assets/back/css/sb-admin-2.min.css') }}" rel="stylesheet">
</head>

<body class="bg-gradient-primary">
<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block">
                    <img src="{{ asset('assets/back/img/register-bg.jpg') }}" alt="Register Image" class="img-fluid" style="width: 100%; height: 100%; object-fit: cover;">
                </div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Créer un compte !</h1>
                        </div>

                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">{{ message }}</div>
                        {% endfor %}
                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger">{{ message }}</div>
                        {% endfor %}

                        {{ form_start(registrationForm, {'attr': {'class': 'user', 'novalidate': 'novalidate'}}) }}
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                {{ form_label(registrationForm.prenom, null, {'label_attr': {'class': 'sr-only'}}) }}
                                {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control form-control-user', 'placeholder': 'Prénom'}}) }}
                                <small class="text-danger">{{ form_errors(registrationForm.prenom) }}</small>
                            </div>
                            <div class="col-sm-6">
                                {{ form_label(registrationForm.nom, null, {'label_attr': {'class': 'sr-only'}}) }}
                                {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control form-control-user', 'placeholder': 'Nom'}}) }}
                                <small class="text-danger">{{ form_errors(registrationForm.nom) }}</small>
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'sr-only'}}) }}
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control form-control-user', 'placeholder': 'Adresse Email'}}) }}
                            <small class="text-danger">{{ form_errors(registrationForm.email) }}</small>
                        </div>
                        <div class="form-group">
                            {{ form_label(registrationForm.nationalite, null, {'label_attr': {'class': 'sr-only'}}) }}
                            {{ form_widget(registrationForm.nationalite, {'attr': {'class': 'form-control form-control-user', 'placeholder': 'Nationalité'}}) }}
                            <small class="text-danger">{{ form_errors(registrationForm.nationalite) }}</small>
                        </div>
                        <div class="form-group">
                            {{ form_label(registrationForm.genre, null, {'label_attr': {'class': 'sr-only'}}) }}
                            {{ form_widget(registrationForm.genre, {'attr': {'class': 'form-control form-control-user', 'placeholder': 'Genre'}}) }}
                            <small class="text-danger">{{ form_errors(registrationForm.genre) }}</small>
                        </div>
                        <div class="form-group">
                            {{ form_label(registrationForm.mot_de_passe, null, {'label_attr': {'class': 'sr-only'}}) }}
                            {{ form_widget(registrationForm.mot_de_passe, {'attr': {'class': 'form-control form-control-user', 'placeholder': 'Mot de passe'}}) }}
                            <small class="text-danger">{{ form_errors(registrationForm.mot_de_passe) }}</small>
                        </div>
                        <button type="submit" class="btn btn-primary btn-user btn-block">S'inscrire</button>
                        <a href="{{ path('app_register_sponsor') }}" class="btn btn-secondary btn-user btn-block mt-2">Inscription Sponsor</a>
                        {{ form_end(registrationForm) }}
                        <hr>
                        <div class="text-center">
                            <a class="small" href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>
                        </div>
                        <div class="text-center">
                            <a class="small" href="{{ path('app_login') }}">Déjà un compte ? Connectez-vous !</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap core JavaScript -->
<script src="{{ asset('assets/back/vendor/jquery/jquery.min.js') }}"></script>
<script src="{{ asset('assets/back/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>

<!-- Core plugin JavaScript -->
<script src="{{ asset('assets/back/vendor/jquery-easing/jquery.easing.min.js') }}"></script>

<!-- Custom scripts -->
<script src="{{ asset('assets/back/js/sb-admin-2.min.js') }}"></script>
</body>
</html>