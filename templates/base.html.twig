<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Sahtek Event{% endblock %}</title>

    {% block css %}
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
        <link href="{{ asset('assets/front/vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('assets/front/css/fontawesome.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/front/css/templatemo-woox-travel.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/front/css/owl.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/front/css/animate.css') }}">
        <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css"/>
        <style>
            .header-area .main-nav .logo-btn {
                display: inline-block;
                padding: 10px 20px;
                background: linear-gradient(90deg, #1f91aa, #1a6f81);
                color: #fff;
                font-size: 18px;
                font-weight: 600;
                font-family: 'Poppins', sans-serif;
                text-decoration: none;
                border-radius: 25px;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                transition: all 0.3s ease;
                line-height: 1;
            }
            .header-area .main-nav .logo-btn:hover {
                background: linear-gradient(90deg, #1a6f81, #1f91aa);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
                color: #fff;
            }
            .header-area .main-nav {
                display: flex;
                align-items: center;
            }
        </style>
    {% endblock %}
</head>

<body>
<div id="js-preloader" class="js-preloader">
    <div class="preloader-inner">
        <span class="dot"></span>
        <div class="dots">
            <span></span>
            <span></span>
            <span></span>
        </div>
    </div>
</div>

<header class="header-area header-sticky">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav class="main-nav">
                    <a href="{{ path('app_evenement_index_front') }}" class="logo-btn">SahtekEvent</a>
                    <ul class="nav">
                        <li><a href="{{ path('app_evenement_index_front') }}" class="{% if app.request.attributes.get('_route') == 'app_evenement_index_front' %}active{% endif %}">Accueil</a></li>
                        <li><a href="{{ path('app_my_participations') }}" class="{% if app.request.attributes.get('_route') == 'app_my_participations' %}active{% endif %}">Mes Participations</a></li>
                        {% if app.user %}
                            <li><a href="{{ path('app_profil_me') }}" class="{% if app.request.attributes.get('_route') == 'app_profil_me' %}active{% endif %}">Mon Profil</a></li>
                            <li><a href="{{ path('app_logout') }}">Déconnexion</a></li>
                        {% else %}
                            <li><a href="{{ path('app_login') }}">Connexion</a></li>
                            <li><a href="{{ path('app_register') }}">Inscription</a></li>
                        {% endif %}
                    </ul>
                    <a class="menu-trigger">
                        <span>Menu</span>
                    </a>
                </nav>
            </div>
        </div>
    </div>
</header>

{% block body %}{% endblock %}

<footer>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright © {{ "now"|date("Y") }} <a href="#">Sahtek Event</a>. Tous droits réservés.
                    <br>Design: <a href="https://templatemo.com" target="_blank" title="free CSS templates">TemplateMo</a></p>
            </div>
        </div>
    </div>
</footer>

{% block js %}
    <script src="{{ asset('assets/front/vendor/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('assets/front/vendor/bootstrap/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('assets/front/js/isotope.min.js') }}"></script>
    <script src="{{ asset('assets/front/js/owl-carousel.js') }}"></script>
    <script src="{{ asset('assets/front/js/wow.js') }}"></script>
    <script src="{{ asset('assets/front/js/tabs.js') }}"></script>
    <script src="{{ asset('assets/front/js/popup.js') }}"></script>
    <script src="{{ asset('assets/front/js/custom.js') }}"></script>
    <script>
        $(document).ready(function() {
            function bannerSwitcher() {
                var next = $('.sec-1-input').filter(':checked').next('.sec-1-input');
                if (next.length) next.prop('checked', true);
                else $('.sec-1-input').first().prop('checked', true);
            }
            var bannerTimer = setInterval(bannerSwitcher, 5000);
            $('nav .controls label').click(function() {
                clearInterval(bannerTimer);
                bannerTimer = setInterval(bannerSwitcher, 5000);
            });
        });
    </script>
{% endblock %}
</body>
</html>